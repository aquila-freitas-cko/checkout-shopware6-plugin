<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:monolog="http://symfony.com/schema/dic/monolog"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd
        http://symfony.com/schema/dic/monolog
        https://symfony.com/schema/dic/monolog/monolog-1.0.xsd">

    <monolog:config>
        <monolog:channel>checkout_generic</monolog:channel>
        <monolog:channel>checkout_generic_datadog</monolog:channel>
        
        <monolog:handler name="checkout_generic"
                         type="stream"
                         path="%kernel.logs_dir%/checkoutcom/checkoutcom.log"
                         handler="checkout_generic_datadog">
            <monolog:channels>
                <monolog:channel>checkout_generic</monolog:channel>
            </monolog:channels>
        </monolog:handler>

        <monolog:handler
            name="checkout_generic_datadog"
            type="service"
            id="Checkoutcom\Handler\DatadogHandler">
            <monolog:channels>
                <monolog:channel>checkout_generic_datadog</monolog:channel>
            </monolog:channels>
        </monolog:handler>
    
    </monolog:config>
</container>